{
  "compilerOptions": {
    "baseUrl": "src",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "paths": {
      "@/pages/*": [
        "pages/*"
      ],
      "@/components/*": [
        "components/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/__mocks__/**/*.ts"
  ]
}
